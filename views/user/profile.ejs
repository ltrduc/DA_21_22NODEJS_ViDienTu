<%- include('./partials/header'); -%>
<!-- [ Main Content ] start -->
<div class="pcoded-main-container">
  <div class="pcoded-wrapper">
    <div class="pcoded-content">
      <div class="pcoded-inner-content">
        <div class="main-body">
          <div class="page-wrapper">
            <!-- [ breadcrumb ] start -->
            <div class="page-header">
              <div class="page-block">
                <div class="row align-items-center">
                  <div class="col-md-12">
                    <div class="page-header-title">
                      <h5 class="m-b-10">Thông tin cá nhân</h5>
                    </div>
                    <ul class="breadcrumb">
                      <li class="breadcrumb-item"><a href="/"><i class="feather icon-home"></i></a></li>
                      <li class="breadcrumb-item"><a href="#!">Thông tin cá nhân</a></li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
            <!-- [ breadcrumb ] end -->
            <!-- [ Main Content ] start -->
            <div class="row">
              <div class="col-sm-12">
                <div class="card">
                  <div class="card-header">
                    <h5>Thông tin cá nhân</h5>
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <div class="grid pt-2 pb-1">
                        <div class="grid-body pt-1 pb-1">
                          <div class="row">
                            <div class="col-lg-12 col-md-8 col-sm-9 col-12 mx-auto form-wrapper">
                              <div class="form-group row mb-0">
                                <label for="" style="font-weight: bold;" class="col-sm-5 col-form-label">Họ và tên:
                                </label>
                                <div class="col-sm-7">
                                  <input type="text" readonly="" value="<%= user.fullname %>" class="form-control-plaintext" id="user-fullname">
                                </div>
                              </div>
                              <div class="form-group row mb-0">
                                <label for="" style="font-weight: bold;" class="col-sm-5 col-form-label">Số tài khoản:
                                </label>
                                <div class="col-sm-7">
                                  <input type="text" readonly="" value="<%= user.username %>" class="form-control-plaintext" id="user-username">
                                </div>
                              </div>
                              <div class="form-group row mb-0">
                                <label for="" style="font-weight: bold;" class="col-sm-5 col-form-label">Ngày sinh:
                                </label>
                                <div class="col-sm-7">
                                  <input type="text" readonly="" value="<%= user.birthday %>" class="form-control-plaintext" id="user-birthday">
                                </div>
                              </div>
                              <div class="form-group row mb-0">
                                <label for="" style="font-weight: bold;" class="col-sm-5 col-form-label">Địa chỉ Email:
                                </label>
                                <div class="col-sm-7">
                                  <input type="text" readonly="" value="<%= user.email %>" class="form-control-plaintext" id="user-email">
                                </div>
                              </div>
                              <div class="form-group row mb-0">
                                <label for="" style="font-weight: bold;" class="col-sm-5 col-form-label">Số điện thoại:
                                </label>
                                <div class="col-sm-7">
                                  <input type="text" readonly="" value="<%= user.phone %>" class="form-control-plaintext" id="user-phone">
                                </div>
                              </div>
                              <div class="form-group row mb-0">
                                <label for="" style="font-weight: bold;" class="col-sm-5 col-form-label">Địa chỉ:
                                </label>
                                <div class="col-sm-7">
                                  <textarea class="form-control-plaintext" readonly="" disabled id="user-address"
                                    cols="10" rows="3"><%= user.address %></textarea>
                                </div>
                              </div>
                              <div class="form-group row mb-0">
                                <label for="" style="font-weight: bold;" class="col-sm-5 col-form-label">Trạng thái tài khoản:
                                </label>
                                <div class="col-sm-7">
                                  <input type="text" readonly="" value="<% if(user.activate.account_activated == 0) {%> Chờ kích hoạt <% } else {%> Đã xác minh <% }%>" class="form-control-plaintext" id="user-phone">
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="grid pt-2 pb-1">
                        <div class="grid-body pt-1 pb-1">
                          <div class="row">
                            <div class="col-6">
                              <a href="" id="user-a-id_card1"><img src="/uploads/<%= user.username %>/<%= user.id_card[0]%>" id="user-id_card1" alt="" style="width: 200px; height: 100px;"></a>
                            </div>
                            <div class="col-6">
                              <a href="" id="user-a-id_card2"><img src="/uploads/<%= user.username %>/<%= user.id_card[1]%>" id="user-id_card2" alt="" style="width: 200px; height: 100px;"></a>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('./partials/footer'); -%>